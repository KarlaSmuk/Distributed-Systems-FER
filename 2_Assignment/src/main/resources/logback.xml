<configuration>
    <!-- Disable Kafka DEBUG -->
    <logger name="org.apache.kafka" level="WARN" />
    <logger name="kafka" level="WARN" />

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>
</configuration>
